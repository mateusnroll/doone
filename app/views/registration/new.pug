extends ../templates/plain.pug
include ../mixins/errors.pug

block content
	if(errors.length > 0)
		+errors(errors)

	p Create a new account

	form(method='post', action='/register')
		label
			p Email
			input(type='text', name='email')

		label
			p Password
			input(type='password', name='password')

		button(type='submit') Create account